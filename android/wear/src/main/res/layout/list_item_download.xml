<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/item_cover_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher" /> <!-- Placeholder -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/item_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Title"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/item_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: PENDING"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textSize="12sp" /> <!-- Smaller text for status -->
    </LinearLayout>

    <ImageButton
        android:id="@+id/item_delete_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete item"
        android:visibility="gone"/> <!-- Initially hidden, shown for completed items -->

</LinearLayout>
